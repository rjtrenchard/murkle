{
  "manifest_version": 2,
  "name": "Murkle",
  "version": "1.0",

  "description": "Superficially removes the text comment box from Reddit, ensuring lurk mode.",

  "icons": {
    "48": "icons/speaknoevil.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["murkle.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
        "id": "murkle@1.0"
    }
  }

}
